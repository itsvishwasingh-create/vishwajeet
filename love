<body>

  <div class="container">
    <h1>Nitya Singh üíñ</h1>
    <div id="typing"></div>
    <div id="final">Will you be my forever? üíç‚ú®</div>
    <div class="signature">‚Äî Vishwajeet Singh üåô</div>
    <div class="hint">(Tap anywhere üòÑ)</div>
  </div>

  <!-- Romantic music -->
  <audio id="music" loop>
    <source src="https://cdn.pixabay.com/audio/2023/03/06/audio_3e2a1c7d36.mp3" type="audio/mpeg">
  </audio>

  <script>
    const text = "You are my forever Valentine üíï";
    let index = 0;
    const typingDiv = document.getElementById("typing");
    const finalMsg = document.getElementById("final");
    const music = document.getElementById("music");
    let musicStarted = false;

    function typeEffect() {
      if (index < text.length) {
        typingDiv.innerHTML += text.charAt(index);
        index++;
        setTimeout(typeEffect, 80);
      } else {
        setTimeout(() => {
          finalMsg.style.display = "block";
        }, 2000);
      }
    }

    typeEffect();

    document.addEventListener("click", function(e) {
      if (!musicStarted) {
        music.play();
        musicStarted = true;
      }

      const heart = document.createElement("div");
      heart.classList.add("heart");
      heart.innerHTML = "üíñ";
      heart.style.left = e.clientX + "px";
      heart.style.top = e.clientY + "px";
      document.body.appendChild(heart);

      setTimeout(() => heart.remove(), 2000);
    });
  </script>

</body>
